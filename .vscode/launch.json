// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/Extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: webpack-watch"
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/tests/unitTests"
            ],
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ],
            "preLaunchTask": "npm: test-compile",
            "presentation": {
                "group": "Tests",
            }
        },
        {
            "name": "Extension Integration Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/tests/integrationTests"
            ],
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ],
            "env": {
                "log-to-console": "true",
            },
            "preLaunchTask": "npm: test-compile",
            "presentation": {
                "group": "Tests",
            }
        },
        {
            "name": "VS-Code Integration Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/tests/vscodeTests",
                "${workspaceFolder}/test-sandbox/UiTestProjects/"
            ],
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ],
            "env": {
                "log-to-console": "true",
            },
            "preLaunchTask": "npm: test-compile",
            "presentation": {
                "group": "Tests",
            }
        },
        {
            "name": "Misc Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/tests/miscTests"
            ],
            "outFiles": [
                "${workspaceFolder}/out/test/**/*.js"
            ],
            "preLaunchTask": "npm: test-compile",
            "presentation": {
                "group": "Tests",
            }
        }
    ]
}