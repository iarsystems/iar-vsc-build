{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cspy",
            "request": "launch",
            "name": "Debug with C-SPY",
            "program": "${workspaceFolder}/Debug/Exe/BasicDebugging.out",
            "stopOnEntry": true,
            "workbenchPath": "${command:iar-settings.workbench}",
            "projectPath": "${command:iar-settings.project-file}",
            "projectConfiguration": "${command:iar-settings.project-configuration}",
            "driverLib": "libarmSIM2",
            "driverOptions": ["--endian=little", "--cpu=ARM7TDMI", "--fpu=None", "--semihosting", "--multicore_nr_of_cores=1"]
        }
    ]
}