{
  "name": "iar-vsc",
  "displayName": "IAR For Visual Studio Code",
  "description": "An extension to uses IAR project files to config and debug projects",
  "version": "0.0.1",
  "publisher": "pluyckx",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.syncIarProjectFile"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.syncIarProjectFile",
        "title": "IAR: Sync Project File"
      }
    ],
    "configuration": [
      {
        "title": "IAR",
        "properties": {
          "iarvsc.iarRootPaths": {
            "type": "array",
            "description": "Root path where IAR installs its applications.",
            "default": ["C:\\Program Files\\IAR", "C:\\Program Files (x86)\\IAR"]
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.21",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "xml-js": "^1.6.8"
  }
}
